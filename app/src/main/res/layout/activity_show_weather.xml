<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textview_weather_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_margin"
        android:layout_marginLeft="@dimen/std_margin"
        android:textSize="20sp"
        android:text="@string/load_error"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_show_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_margin"
            android:layout_marginLeft="@dimen/std_margin"/>
        <TextView
            android:id="@+id/tv_show_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_margin"
            android:layout_marginLeft="@dimen/std_margin"
            android:layout_toRightOf="@id/tv_show_pressure"/>
        <TextView
            android:id="@+id/tv_show_storm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_margin"
            android:layout_marginLeft="@dimen/std_margin"
            android:layout_toRightOf="@id/tv_show_wind"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_margin"
        android:layout_marginLeft="@dimen/std_margin"
        android:text="@string/share_with_friends"/>
</LinearLayout>
