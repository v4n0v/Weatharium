<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/info_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/std_margin"
        android:text="City"
        android:textSize="@dimen/text_size_h2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info_temperature_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/big_margin"
            android:layout_weight="1"
            android:text="+30"
            android:textSize="68sp" />

        <TextView
            android:id="@+id/info_additional_info_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </TextView>

    </LinearLayout>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/info_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_h2"
        >

    </TextView>
    <ImageView
        android:id="@+id/info_weather_ico"
        android:layout_gravity="center"
        android:layout_width="@dimen/icon_weather_size"
        android:layout_height="@dimen/icon_weather_size"  />

</LinearLayout>