<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/info_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/oswald_light"
        android:textSize="@dimen/text_sizze_header"
        tools:text="City" />

    <LinearLayout
        android:id="@+id/main_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/info_weather_ico"
            android:layout_width="100dp"
            android:layout_height="100dp"
              />
        <TextView
            android:id="@+id/info_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_sizze_header" />

        <!--android:layout_marginLeft="@dimen/big_margin"-->


    </LinearLayout>

    <TextView
        android:id="@+id/info_additional_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textSize="20sp"
        tools:text="Pressure\nHumidity\nWind" />

    <TextView
        android:id="@+id/info_temperature_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="126sp"
        android:layout_gravity="center"
        tools:text="+30" />


</LinearLayout>