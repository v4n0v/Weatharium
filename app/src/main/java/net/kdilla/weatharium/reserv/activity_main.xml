<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="net.kdilla.weatharium.SelectCountryActivity">


    <TextView
        android:id="@+id/textview_tmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/big_margin"
        android:text="@string/tap_to_select"
        android:textColor="@color/colorLogoText"
        android:textSize="@dimen/text_size_h2"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_sel_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_margin"
        android:entries="@array/city_selection" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_additional" />

        <CheckBox
            android:id="@+id/chb_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chb_pressure" />

        <CheckBox
            android:id="@+id/chb_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chb_wind" />

        <CheckBox
            android:id="@+id/chb_storm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chb_storm" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_margin"
        android:text="@string/btn_behold_weatharium" />

    <TextView
        android:id="@+id/textview_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/std_margin"
        android:text="@string/load_error"
        android:textColor="@color/colorLogoText"
        android:visibility="invisible" />
</LinearLayout>

